@{
    ViewData["Title"] = "login";
}
<head>
    <title>Registration form</title>
    <link href="~/css/StyleForHome.css" rel="stylesheet">
</head>

<body>
    <form id="form1" action="/authorization/login" method="post">
        <section>
            <div class="container" id="MiddleContainer">
                <span id="TitleOfRegistration">
                    Registration
                </span>
                <div class="registration">
                    <div>
                        <span>
                            username
                        </span>
                        <input class="UserAndPass" type="text" name="username" value="" />
                    </div>
                    <div>
                        <span>
                            password
                        </span>
                        <input class="UserAndPass" type="password" name="password" rt value="" />
                    </div>
                    <div>
                        <input class="btn" type="submit" name="login" value="login" />
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>
<div>
    @ViewBag.login_text
</div>

