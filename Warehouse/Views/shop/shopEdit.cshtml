@{
    ViewData["Title"] = "shop Edit";
}
@model Warehouse.Models.Shop
<h1>@ViewData["Title"]</h1>

<form action="/Shop/shopEdit" method="post">
    <input type="text" name="ID" value="@Model.Id" hidden />
    <div>
        <span id="Name">
            Name
        </span>
        <input type="text" name="name" value="@Model.Name" required />
    </div>
    <div>
        <span>
            Address
        </span>
        <input type="text" name="address" value="@Model.Address" required />
    </div>
    <div>
        <span>
            Shop Type
        </span>
        <label for="browser">Choose your shop type from the list:</label>

        <select name="Type">
            @{ 
                ShopProcedures shop = new ShopProcedures();
                var shoptype = shop.GetShopTypes();
            }
            @foreach (var item in shoptype)
            {
                <option value="@item.Type"> @item.Type </option>
            }
        </select>





    </div>
    <div>
        <input type="submit" name="Edit" value="Edit" />
    </div>

</form>
