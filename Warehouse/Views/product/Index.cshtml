@{
    ViewData["Title"] = "product";
}


@model IEnumerable<Warehouse.Models.Products>




<h1>@ViewData["Title"]</h1>
<head>
    <title>Registration form</title>
    <link href="~/css/StyleForPrivacy.css" rel="stylesheet">
</head>


@if (Model != null)
{
    <form action="Index" method="post">
        <input id="Radio1" type="radio" value="name" checked="checked" name="searchComponent" />
        <label for="name">name</label>
        <input id="Radio1" type="radio" value="company_name" name="searchComponent" />
        <label for="name">company</label>
        <input type="text" name="name1" />
        <input type="submit" name="search" value="search" />
    </form>
    <TABLE border="1">
        <TR id="firstColumn">
            <TD style="display:none;">ID</TD>
            <TD>Name</TD>
            <TD>Company</TD>
            <TD>ImageUrl</TD>
        </TR>
        @foreach (var item in Model)
        {
            <TR>
                <TD style="display:none;" name="ID">@item.Id</TD>
                <TD>@item.Name</TD>
                <TD>@item.Company</TD>
                <TD>@*@item.ImageUrl*@ <img height="80" src="/@item.ImageUrl"> </TD>
                <form action="/product/Index" method="post">
                    <TD>
                        <input id="Deletebtn" type="submit" name="delete" value="delete">
                        <a href="productEdit?ID=@item.Id">Edit</a>
                        <INPUT TYPE="text" NAME="ID" style="display: none" value="@item.Id">
                    </TD>
                </form>
            </TR>

        }
    </TABLE>

}
<form action="/product/productAdd" method="post">
    <input type="submit" name="damateba" value="Add" />
</form>

